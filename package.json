{
  "name": "idk-sitecore-demo",
  "description": "My Demo Site for all Examples listed in IDKSitecore.com",
  "version": "0.1.0",
  "private": true,
  "config": {
    "appName": "idk-sitecore-demo",
    "rootPlaceholders": [
      "jss-main"
    ],
    "sitecoreConfigPath": "/App_Config/Include/zzz",
    "graphQLEndpointPath": "/sitecore/api/graph/edge",
    "language": "en",
    "templates": [
      "nextjs",
      "nextjs-xmcloud",
      "nextjs-sxa",
      "nextjs-multisite"
    ]
  },
  "author": {
    "name": "Robert Watson",
    "url": "https://idksitecore.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-real-bro-grammer/idk-sitecore-demo"
  },
  "bugs": {
    "url": "https://github.com/the-real-bro-grammer/idk-sitecore-demo/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@sitecore-cloudsdk/core": "^0.5.1",
    "@sitecore-cloudsdk/events": "^0.5.1",
    "@sitecore-feaas/clientside": "^0.5.19",
    "@sitecore-jss/sitecore-jss-nextjs": "~22.7.0",
    "@sitecore/components": "~2.0.1",
    "axios": "^1.11.0",
    "bootstrap": "^5.1.3",
    "font-awesome": "^4.7.0",
    "next": "^15.3.1",
    "next-localization": "^0.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.52.3",
    "sass-alias": "^1.0.5",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@sitecore-jss/sitecore-jss-cli": "~22.7.0",
    "@sitecore-jss/sitecore-jss-dev-tools": "~22.7.0",
    "@types/node": "^22.9.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "chalk": "~4.1.2",
    "chokidar": "~3.5.3",
    "constant-case": "^3.0.4",
    "cross-env": "~7.0.3",
    "dotenv-flow": "^4.1.0",
    "npm-run-all": "~4.1.5",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "~5.4.0"
  },
  "scripts": {
    "bootstrap": "ts-node --require dotenv-flow/config --project tsconfig.scripts.json scripts/bootstrap.ts",
    "build": "cross-env NODE_ENV=production npm-run-all --serial bootstrap next:build",
    "graphql:generateQueries": "ts-node --project tsconfig.scripts.json ./scripts/generate-queries.ts",
    "install-pre-push-hook": "ts-node --project tsconfig.scripts.json ./scripts/install-pre-push-hook.ts",
    "jss": "jss",
    "next:build": "next build",
    "next:dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "next:start": "next start",
    "scaffold": "ts-node --project tsconfig.scripts.json scripts/scaffold-component/index.ts",
    "start:connected": "cross-env NODE_ENV=development npm-run-all --serial bootstrap --parallel next:dev start:watch-components",
    "start:production": "cross-env-shell NODE_ENV=production npm-run-all --serial bootstrap next:build next:start",
    "start:watch-components": "ts-node --project tsconfig.scripts.json scripts/generate-component-builder/index.ts --watch"
  }
}
